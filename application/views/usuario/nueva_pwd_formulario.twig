{% extends "_templates/base.twig" %} {% block contenido %}


<div class="row">
	{% if form.error|length %}

	<div class="alert alert-danger" role="alert">{{ form.error|raw }}</div>

	{% endif %}

	<div class="col-md-5">
		<h3>Restablecer Contraseña</h3>
		<hr />
		{{ form.form_email|raw }}
		<div class="form-group {% if form.email|length -%} has-error {%- endif -%}">
			<label for="email" class="col-sm-2 control-label">Email</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="email" name="email"
					placeholder="">
					 <span>{{ form.email|raw }}</span>
			</div>
		</div>

		<input type="hidden" value="{{ form.token }}" name="tokenLogin" />

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Enviar contraseña</button>
			</div>
		</div>
		</form>
	</div>



</div>
</div>

{% endblock %}
