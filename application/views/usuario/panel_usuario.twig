{% extends "_templates/base.twig" %} {% block contenido %}

<div class="col-md-12">
    {% if form.error|length %}
	   <div class="alert alert-danger" role="alert">{{ form.error|raw }}</div>
	{% endif %}
	<h1>
		<small>Datos Personales</small>
	</h1>
	<label for=""><a
		href="{{ base_url() }}usuario/editaUsuario/{{ usuario.idUsuario }}">Modificar
			datos</a></label>
	<div class="well">
		<p>Nombre: {{ usuario.nombre|title}} {{ usuario.apellidos|title }}</p>
		<p>DNI: {{ usuario.dni }}</p>
		<p>Provincia: {{ usuario.provincia }}</p>
		<p>Dirección: {{ usuario.direccion|title }}</p>
		<p>Código postal: {{ usuario.cp|title }}</p>
	</div>


	<h1>
		<small>Pedidos en proceso</small>
	</h1>
	<table class="table table-hover">
		<tr>

			<th>Código</th>
			<th>Fecha creación</th>
			<th>Fecha entrega</th>
			<th>Estado Actual</th>
			<th>Operaciones</th>
		</tr>
		{% for pedNoProce in pedsNoProce %}
		<tr>
			<form
				action="{{ base_url() }}pedido/cancelaPedido/{{ pedNoProce.idPedido  }}">
			
			
			<td>{{ pedNoProce.idPedido }}</td>
			<td>{{ pedNoProce.fecha_creacion }}</td>
			<td>--</td>
			<td>Pendiente de procesar</td>
			<td><a class="btn btn-default"
				href="{{ base_url() }}pedido/factura/{{ pedNoProce.idPedido  }}">Ver</a>
				<!-- Button trigger modal -->
				<button type="button" class="btn btn-default" data-toggle="modal"
					data-target="#borrarModal">Eliminar</button>
			</td>

			<!-- Modal -->
			<div class="modal fade" id="borrarModal" tabindex="-1" role="dialog"
				aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal">
								<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
							</button>
							<h4 class="modal-title" id="myModalLabel">Confirmación</h4>
						</div>
						<div class="modal-body">Este pedido será eliminado,
							¿estás seguro?</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default"
								data-dismiss="modal">Cancelar</button>
							<button type="submit" class="btn btn-primary" onclick=""
								id="confirmacion">Confirmar</button>
						</div>
					</div>
				</div>
			</div>
			</form>
		</tr>

		{% endfor %}
	</table>


	<h1>
		<small>Historial pedidos</small>
	</h1>
	<table class="table table-hover">
		<tr>
			<th>Código</th>
			<th>Fecha creación</th>
			<th>Fecha entrega</th>
			<th>Factura</th>
			<th>Estado Actual</th>
			<th>Operaciones</th>
		</tr>
		{% for pedido in pedidos %}
		<tr>
			<td>{{ pedido.idPedido }}</td>
			<td>{{ pedido.fecha_creacion }}</td>
			<td>{{ pedido.fecha_entrega }}-</td>
			<td><a href="{{ base_url() }}pedido/factura/{{ pedido.idPedido  }}/0"><span
					class="glyphicon glyphicon-list-alt" aria-hidden="true"></span></a></td>
			<td>{{ pedido.estado }}</td>
			<td><a href="{{ base_url() }}pedido/factura/{{ pedido.idPedido  }}/1">Ver</a></td>
		</tr>

		{% endfor %}
	</table>


</div>

{% endblock %} {% block script %}


<script type="text/javascript">

</script>
{% endblock %}
