{% extends "_templates/base.twig" %} {% block content %}
<div class="page-header">
	<h1>
		{{ tabla }} <small>{{ cabecera }} #{{ id }}</small>
	</h1>

</div>

<form
		action="{{ constant('URL') }}{{ tabla }}/{{ accion }}/{{ id }}"
		method="POST" class="form-horizontal" role="form">
<button type="submit" class="btn btn-primary btn-lg btn-block">Confirmar operación</button>
<a class="btn btn-default btn-lg btn-block" href="{{ constant('URL') }}{{ tabla }}">Cancelar operación</a>
</form>
{% endblock %}